{% extends 'base.html.twig' %}
{% form_theme formRegistration 'bootstrap_4_layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="sign">
        <img src="http://placehold.it/350x150">
        <br>
        <br>
        <p>Inscription</p>
        {{ form_start(formRegistration) }}
        {{ form_row(formRegistration.username, {'attr': {'label': 'Nom d\'utilisateur', 'placeholder': 'Votre nom'}}) }}
        {{ form_row(formRegistration.login, {'attr': {'label': 'Nom d\'utilisateur', 'placeholder': 'Votre pseudo'}}) }}
        {{ form_row(formRegistration.email, {'attr': {'label': 'Adresse e-mail', 'placeholder': 'Votre adresse mail'}}) }}
        {{ form_row(formRegistration.password, {'attr': {'label': 'Mot de passe', 'placeholder': 'Quel mot de passe ?'}}) }}
        {{ form_row(formRegistration.confirm_password, {'attr': {'label': 'Mot de passe', 'placeholder': 'Confirmer le mot de passe'}}) }}
        <button type="submit" class="btn btn-success">Inscription !</button>
        {{ form_end(formRegistration) }}
    </div>
{% endblock %}